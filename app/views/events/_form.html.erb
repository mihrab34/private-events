<%= form_with model: @event do |f| %>
  <%= f.label 'Event Title:' %><br/>
  <%= f.text_field :title, {autofocus: true, required: true, class: 'mb-1 border border-black shadow appearance-none'} %><br/>
  <%= f.label 'Event Description:' %><br/>
  <%= f.text_field :description, {autofocus: true, required: true, class: 'mb-1 border border-black shadow appearance-none'} %><br/>
  <%= f.label 'Event date:' %><br/>
  <%= f.date_field :date, {required: true, class: 'mb-1 border border-black shadow appearance-none'} %><br/>
  <%= f.label 'Event location:' %><br/>
  <%= f.text_field :location, {required: true, class: 'mb-3 border border-black shadow appearance-none'} %><br/>
  <%= f.submit 'Create Event', class: 'bg-gray-300 py-1 px-2 text-sm rounded cursor-pointer hover:bg-gray-400' %><br/>
<% end %>