<div class='px-6 py-4'>
  <h2 class='font-bold underline text-lg mb-3'>Login</h2>
  <%= form_with url: sessions_path, method: :post do |f| %>
    <%= f.label 'Name:' %><br/>
    <%= f.text_field :name, {autofocus: true, required: true, class: 'mb-3 border border-black shadow appearance-none'} %><br/>
    <%= f.submit 'Log in', class: 'bg-gray-300 py-1 px-2 text-sm rounded cursor-pointer hover:bg-gray-400' %><br/>
  <% end %>
  <br/>
  <%= link_to 'Sign Up', login_path, class: 'hover:underline' %>
</div>